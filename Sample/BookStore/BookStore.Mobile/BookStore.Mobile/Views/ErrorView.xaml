<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="BookStore.Mobile.Views.ErrorView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Content>
        <StackLayout Padding="24">
            <Label
                FontSize="Large"
                Text="Error"
                TextColor="{DynamicResource Header}" />
            <Label
                x:Name="Brief"
                x:FieldModifier="public"
                Text="(undefined)"
                TextColor="{DynamicResource HeaderLight}" />
            <Label
                FontSize="Medium"
                Text="Call Stack"
                TextColor="{DynamicResource Header}" />
            <Editor
                x:Name="Stack"
                x:FieldModifier="public"
                IsEnabled="False"
                IsReadOnly="True"
                Text="(undefined)" />
        </StackLayout>
    </ContentView.Content>
</ContentView>