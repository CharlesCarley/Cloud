<?xml version="1.0" encoding="utf-8" ?>
<resources>
	<style name="MainTheme" parent="MainTheme.Base">
	</style>

	<style name="MainTheme.Base" parent="@android:style/Theme.Material.Light">
		<item name="android:colorPrimary">@color/BarBackground</item>
		<item name="android:colorPrimaryDark">@color/BarBackground</item>
		<item name="android:statusBarColor">@color/BarBackground</item>
		<item name="android:textColorPrimary">@color/BarText</item>
		<item name="android:windowBackground">@color/Background</item>
		<item name="android:colorAccent">@color/Accent</item>
		<item name="android:buttonStyle">@style/LayerButton</item>
		<item name="android:editTextStyle">@style/LayerEntry</item>
		<item name="android:popupMenuStyle">@style/LayerPopup</item>
		<item name="android:actionBarPopupTheme">@style/LayerPopup</item>
		<item name="android:actionBarWidgetTheme">@style/LayerPopup</item>
		<item name="android:popupTheme">@style/LayerPopup</item>
		<item name="android:actionButtonStyle">@style/LayerActionButton</item>
	</style>

	<style name="LayerButton" parent="@android:style/Widget.Button">
		<item name="android:background">@drawable/LayerButton</item>
		<item name="android:minWidth">72dp</item>
		<item name="android:minHeight">32dp</item>
		<item name="android:textColor">@color/ButtonText</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:textSize">@dimen/LabelNormal</item>
	</style>

	<style name="LayerEntry" parent="@android:style/Widget.EditText">
		<item name="android:background">@drawable/LayerButton</item>
		<item name="android:minWidth">@dimen/ButtonWidth</item>
		<item name="android:minHeight">@dimen/ButtonHeight</item>
		<item name="android:textColor">@color/ButtonText</item>
		<item name="android:textSize">@dimen/LabelNormal</item>
		<item name="android:paddingLeft">@dimen/DefaultPadding</item>
	</style>

	<style name="LayerActionButton" parent="android:style/Widget.ActionButton">
		<item name="android:textColor">@color/ButtonText</item>
		<item name="android:textColorPrimary">@color/ButtonText</item>
	</style>

	<style  name="LayerPopup" parent="android:style/Widget.PopupMenu">
		<item name="android:textSize">@dimen/LabelNormal</item>
		<item name="android:textColor">@color/BarText</item>
		<item name="android:background">@color/BarBackground</item>
	</style>

</resources>